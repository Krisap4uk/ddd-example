{
  "compilerOptions": {
    "target": "ES2024",
    "module": "CommonJS",
    "moduleResolution": "node",

    "useDefineForClassFields": true,
    "sourceMap": true,
    "removeComments": true,
    "noEmitOnError": true,

    "esModuleInterop": false,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "strict": true,
    "alwaysStrict": true,
    "skipLibCheck": true,

    "outDir": "./dist"
  },
  "include": ["src/**/*.ts"]
}
